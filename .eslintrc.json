{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "eol-last": 0,
      "no-multiple-empty-lines": [
        "error", 
        {
          "max": 1,
          "maxEOF": 0
          }
      ],
      "@typescript-eslint/space-before-function-paren": [
        "error", {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "never"
        }
      ],
      "@typescript-eslint/no-floating-promises": 0
    }
}

